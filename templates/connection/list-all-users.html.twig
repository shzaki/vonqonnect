{% extends('home.html.twig') %}
{% block stylesheets %}
    <link rel="stylesheet" href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>List of all users</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <table class="datatable">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        {# @var user \App\Entity\User #}
                        {% for user in users %}
                            <tr>
                                <td>
                                    {{ user.email }}
                                </td>
                                <td>
                                    {{ user.userConnections[0].status ?? '' }}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {% include('common/datatables.html.twig') %}
{% endblock %}